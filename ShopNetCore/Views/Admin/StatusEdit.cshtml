@model Status
@{
    ViewData["Title"] = "Durum Güncelleme";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}



<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="portlet box purple ">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>DURUM GÜNCELLEME FORMU
                </div>
                <div class="tools">
                    <a href="" class="collapse">
                    </a>
                    <a href="#portlet-config" data-toggle="modal" class="config">
                    </a>
                    <a href="" class="reload">
                    </a>
                    <a href="" class="remove">
                    </a>
                </div>
            </div>
            <div class="portlet-body form">
                <form class="form-horizontal" action="/Admin/StatusEdit" method="post" role="form">

                    <div class="form-body">



                        <div class="form-group">
                            <label class="col-md-3 control-label" asp-for="StatusName"></label>
                            <div class="col-md-9">
                                <input asp-for="StatusName" class="form-control input-lg" placeholder="Durum Adı" />
                            </div>
                            <span asp-validation-for="StatusName" class="text-danger"></span>
                        </div>

                        


                        <div class="form-group">
                            <label class="col-md-3 control-label" asp-for="Active"></label>
                            <div class="col-md-9">
                                <input asp-for="Active" class="form-control input-lg" />
                            </div>
                        </div>

                    </div>

                    <input type="hidden" asp-for="StatusID" />

                    <div class="form-actions right1">
                        <a asp-action="StatusIndex" class="btn btn-primary">Durum Listesi</a>
                        <input type="submit" value="Güncelle" class="btn btn-success" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
