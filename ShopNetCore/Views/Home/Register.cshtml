@model User
@{
  ViewData["Title"] = "Register";
  Layout = "~/Views/Shared/DefaultLayout.cshtml";
}

<div class="checkout-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-12 col-lg-12">
        <div class="row">
          <div class="all-out-area">
            <div class="col-sm-12 col-md-4 col-lg-3"></div>
            <div class="col-sm-12 col-md-4 col-lg-6">
              <div class="bt-info" style="border-color:black">
                <h3 class="proopc-process-title"><span class="proopc-step">1</span>HESAP OLUŞTUR</h3>
                <div class="chek-full-info">
                  <div class="inner-wrap">
                    <div class="edit-address">
                      <form method="post" action="@Url.Action("Register","Home")">
                        <div>
                          <div class="inner">
                            <label class="email">Ad Soyad</label>
                            <input type="text" name="NameSurname" maxlength="100" required>
                          </div>

                          <div>
                            <div class="inner">
                              <label class="email">Email</label>
                              <input type="text" name="Email" maxlength="100" required>
                            </div>
                          </div>
                          <div>
                            <div class="inner">
                              <label class="email">Şifre</label>
                              <input type="password" name="Password" maxlength="100" required>
                            </div>
                          </div>
                          <div>
                            <div class="inner">
                              <label class="email">Telefon Numarası</label>
                              <input type="tel" name="Telephone" required>
                            </div>
                          </div>

                          <div>
                            <div class="inner">
                              <label class="email">Fatura Adresi</label>
                              <textarea typeof="text" cols="80" rows="4" name="InvoicesAddress" required></textarea>
                            </div>
                          </div>
                          <div class="submit_crt">
                            <input type="submit" value="ÜYE OL" class="update_cart" />
                          </div>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


